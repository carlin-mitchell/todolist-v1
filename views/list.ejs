<%- include('header'); %> 

<body>
    <div id="heading" class="box">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">

        <% userAddedItems.forEach(element => { %>
        <div class="item">
            <input type="checkbox">
            <p><%= element %></p>
        </div>
        <% }) %> 

         
        <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="New item" autofocus autocomplete="off">
                <button type="submit" name="list" value= <%=listTitle%>>+</button>
        </form>

    </div>
    
<%- include('footer'); %> 